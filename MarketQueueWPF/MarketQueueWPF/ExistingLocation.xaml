<Window x:Class="MarketQueueWPF.ExistingLocation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketQueueWPF"
        mc:Ignorable="d"
        Title="ExistingLocation" 
        Height="600" Width="400"
        MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Height="Auto">
            <ListView Margin="10" Name="Areas">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Area Name" Width="200" DisplayMemberBinding="{Binding Area_Name}"/>
                        <GridViewColumn Header="visitors" Width="50" DisplayMemberBinding="{Binding visitors}"/>
                        <GridViewColumn Header="Button" Width="100" DisplayMemberBinding="{Binding button}">
                            
                        </GridViewColumn>
                    </GridView>
                    
                    
                </ListView.View>
                
                
            </ListView>

        </ScrollViewer>






    </Grid>
</Window>
