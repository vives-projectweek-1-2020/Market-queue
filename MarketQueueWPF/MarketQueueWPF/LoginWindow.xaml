<Window x:Class="MarketQueueWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketQueueWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="400">
    <Grid Margin="10" >
        <TextBlock Text="Welcome to our Market Queue app! " FontSize="20" 
                   FontFamily="Times New Roman" FontWeight="DemiBold" HorizontalAlignment="Center" 
                   VerticalAlignment="Top" Padding="20"/>
        <TextBlock Text="Are u here to add a new location or to go to an already existing location?" 
                   HorizontalAlignment="Center" TextWrapping="Wrap" 
                   TextAlignment="Center" FontSize="15" FontWeight="DemiBold" FontFamily="Times New Roman"
                   Padding="20" Height="87" Margin="18,89,18,373"/>
        <Button x:Name="ButtonAddLocation" Content="Add location" Height="20" Width="100"
                Margin="-120,0,0,0"
                Click="ButtonAddLocation_Click"/>
        <Button x:Name="ButtonMainWindow" Content="Existing Location" Width="100" 
                Height="20" Margin="120,0,0,0"/>


    </Grid>
</Window>
